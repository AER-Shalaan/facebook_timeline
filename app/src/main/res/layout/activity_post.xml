<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_post"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:weightSum="3"
                >

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/person"
                    android:background="@color/amber_accent"
                    app:shapeAppearance="@style/roundedShapableImage"
                    />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="3"
                    >
                    <TextView
                        android:text="Unblast"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/timeText"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="2 hrs"
                        android:textColor="@color/gray_color"
                        android:textSize="12sp"
                        app:drawableEndCompat="@drawable/earth"
                        app:drawableTint="@color/gray_color"
                        android:drawablePadding="5dp"
                        />
                </LinearLayout>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/menuImage"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/menu"
                    android:layout_gravity="start"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/postContentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buckle up, because change is coming to WordPress"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="http://unblast.com/color-schemes"
                android:textColor="@color/fb_bg_color"
                android:textSize="14sp"
                android:layout_marginBottom="6dp"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/amber_accent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/postContentText"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:src="@drawable/blue_like"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="3dp"/>

                <TextView
                    android:text="12"
                    android:textSize="13sp"
                    android:textColor="@color/gray_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
                <TextView
                    android:text="1 Share"
                    android:textSize="13sp"
                    android:textColor="@color/gray_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:drawableEndCompat="@drawable/amber_circle"
                    android:drawablePadding="4dp"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/arrow_drop_down"
                    app:tint="@color/gray_color"
                    />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_color" />
            <LinearLayout
                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/postImage"
                android:weightSum="4"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cornerRadius="0dp"
                    android:layout_weight="1.2"
                    android:backgroundTint="@color/white"
                    android:text="Like"
                    android:textColor="@color/gray_color"
                    app:icon="@drawable/like"
                    app:iconGravity="start"
                    app:iconPadding="4dp"
                    app:iconTint="@color/gray_color"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cornerRadius="0dp"
                    android:layout_weight="1.6"
                    android:backgroundTint="@color/white"
                    android:text="Comment"
                    android:textColor="@color/gray_color"
                    app:icon="@drawable/comment"
                    app:iconGravity="start"
                    app:iconPadding="4dp"
                    app:iconTint="@color/gray_color"
                    />
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cornerRadius="0dp"
                    android:layout_weight="1.2"
                    android:backgroundTint="@color/white"
                    android:text="Share"
                    android:textColor="@color/gray_color"
                    app:icon="@drawable/share"
                    app:iconGravity="start"
                    app:iconPadding="4dp"
                    app:iconTint="@color/gray_color"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>








</androidx.constraintlayout.widget.ConstraintLayout>